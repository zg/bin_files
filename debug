#!/bin/bash

if [ $# -ne 1 ]; then
    echo "usage: $0 filename"
else
    filename=$(basename "$1")
    gcc -Wall -fno-asynchronous-unwind-tables -std=c99 -S -O0 -masm=intel ${filename%.*}.c

    # this will include cfi labels and optimization
    #gcc -Wall -ggdb -std=c99 -S ${filename%.*}.c

    if [ -e "${filename%.*}.S" ]; then
        echo "Wrote .S successfully."
    elif [ -e "${filename%.*}.s" ]; then
        echo "Wrote ${filename%.*}.s successfully."
    fi
fi
